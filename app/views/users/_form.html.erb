<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2>
      <%= t 'global.forms.messages.errors', count: user.errors.count %>
      </h2>
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.text_field :firstname, class: "form-control", placeholder: "Enter your first name" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :lastname, class: "form-control", placeholder: "Enter your last name" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :email, class: "form-control", placeholder: "Enter your email" %>
  </div>

  <div class="field form-group">
    <%= form.date_field :dob, class: "form-control"%>
  </div>

  <div class="actions">
    <%= form.submit t('global.forms.update_developer') %>
  </div>
<% end %>
