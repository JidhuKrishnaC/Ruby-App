<p style="color: green"><%= notice %></p>

<table class="table table-striped table-bordered table-hover">
<thead style="background-color: #01BD95;" >
<tr>
<th><%=t('global.table.task_name')%></th>
<th><%=t('global.table.due_date')%></th>
<th><%=t('global.table.status')%></th>
<th><%=t('global.table.developer')%></th>
<th colspan="3"></th>
</tr>
</thead>

<tbody id="tasks">
  <tr>
    <%= render @task %>
    <td><%= link_to t('global.forms.edit_task'), edit_task_path(@task) %></td>
    <td><%= link_to t('global.forms.back_task'), tasks_path %></td>
  </tr>
</tbody>
</table>

<div>
  <%= button_to t('global.forms.destroy_task'), @task, method: :delete, class:"btn btn-success" %>
</div>
